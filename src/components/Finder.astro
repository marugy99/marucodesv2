---
const { activePage } = Astro.props;
---

<section
  class="w-full rounded-md overflow-hidden grid grid-cols-[120px,1fr] md:grid-cols-[200px,1fr] shadow h-[80vh] xl:h-[800px]"
>
  <div class="px-3 py-4 text-gray-100 bg-slate-800/50">
    <div aria-hidden="true" class="flex items-center gap-2">
      <div class="w-3 h-3 rounded-full bg-rose-500"></div>
      <div class="w-3 h-3 bg-yellow-500 rounded-full"></div>
      <div class="w-3 h-3 rounded-full bg-cyan-500"></div>
    </div>
    <nav class="mt-4" aria-labelledby="primary-navigation">
      <ul>
        <li>
          <a
            href="/"
            class={activePage === "about"
              ? "bg-slate-800/50 p-2 rounded-md block"
              : "p-2 block"}>About</a
          >
        </li>
        <li>
          <a
            href="/projects"
            class={activePage === "projects"
              ? "bg-slate-800/50 p-2 rounded-md block"
              : "p-2 block"}>Projects</a
          >
        </li>
        <li>
          <a
            href="/journal"
            class={activePage === "journal"
              ? "bg-slate-800/50 p-2 rounded-md block"
              : "p-2 block"}>Journal</a
          >
        </li>
        <li>
          <a
            href="/contact"
            class={activePage === "contact"
              ? "bg-slate-800/50 p-2 rounded-md block"
              : "p-2 block"}>Contact</a
          >
        </li>
      </ul>
    </nav>
  </div>
  <div class="p-6 overflow-x-hidden overflow-y-auto text-gray-100 bg-slate-800">
    <slot />
  </div>
</section>
