---
const { activePage, menuItems } = Astro.props;
---

<div
  class="sticky top-0 flex items-center gap-4 px-6 py-3 sm:hidden bg-slate-600"
>
  <div aria-hidden="true" class="flex items-center gap-2">
    <div class="w-3 h-3 rounded-full bg-rose-500"></div>
    <div class="w-3 h-3 bg-yellow-500 rounded-full"></div>
    <div class="w-3 h-3 rounded-full bg-cyan-500"></div>
  </div>

  <div class="relative">
    <label for="navigate-to" class="sr-only">Navigate to</label>
    <select
      name="navigate-to"
      id="navigate-to"
      class="w-[200px] px-4 py-2 rounded-md appearance-none bg-slate-700 cursor-pointer"
      x-data
      x-on:change="window.location.replace(event.target.value)"
    >
      {
        menuItems.map((item) => (
          <option value={item.href} selected={activePage === item.id}>
            {item.name}
          </option>
        ))
      }
    </select>
    <span
      aria-hidden="true"
      class="absolute w-5 pointer-events-none top-[10px] right-2"
    >
      <img src="/chevron-down-icon.svg" alt="Chevron down icon" />
    </span>
  </div>
</div>
